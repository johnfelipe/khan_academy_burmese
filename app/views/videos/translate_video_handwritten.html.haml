
%html

  %head
    = stylesheet_link_tag 'videos'
  %body
    = render :partial => "shared/dashhead"
    = render :partial => "shared/nav"
    
    .table-container
      .row
        .col-md-12
          .col-md-12.col-sm-12.col-xs-12
            .panel.panel-success{:id => "list_table"}
              .panel-heading
                Video Details
              .panel-body
                %ul.list-group
                  .list-group-item.h5= "Subject: #{@video.subject}"
                  .list-group-item.h5= "Course: #{@video.course}"
                  .list-group-item.h5= link_to "Title: #{@video.title}", "#"




            .panel.panel-info{:id => "list_table"}
              .panel-heading
                Video Status
              .panel-body
                .list-group
                  .list-group-item.h5= "Assigned to: #{@user.name}"
                  .list-group-item.h5= "Due Date: #{@video.due_date}"
                  .list-group-item
                    .bs-example 
                      .btn-group
                        %button_to.btn.btn-default= link_to "Digital Translation", translate_video_path()
                        %button_to.btn.btn-default.handwritten_button.active Handwritten Translation
                  .list-group-item
                    %button_to.btn.btn-danger= link_to "Unassign Video To Me", unassign_translator_path(:id => @user.id, :video_id => @video.video_id),{:style=> 'color:white;', :confirm => "Are you sure you want to unassign #{@video.title} as your video?", :method => :post}
  
                  %h4 Available ---> Translate ---> Digitize ---> QA ---> Complete
                  .col-md-10
                    .progress.progress-striped.active
                      .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "45", role: "progressbar", style: "width: 40%"}
                        %span.sr-only


            .panel.panel-primary{:id => "list_table"}
              .panel-heading
                Upload Handwritten Translations in .jpg, .png, or .pdf format.
              .panel-body
                .list-group
                  .list-group-item
                    %form{:action =>'upload_translation_handwritten', :method => 'post'}
                    .form-group 
                      %label.h4{for: "handwrittenTranslation"} Upload Handwritten Translation
                      %input#inputFile{name: 'translation', type: "file"}
                    %button.btn.btn-default{type: "submit", action: 'upload_translation_handwritten', method: 'post', controller: 'videos'} Upload
                  .list-group-item
                    %button_to.btn.btn-primary= link_to "Ready for Digitization", set_handwritten_translate_complete_path(),{:style=> 'color:white;', :confirm => "Are you sure #{@video.title} has been properly translated and submitted on Amara?", :method => :post}


